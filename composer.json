{
    "name":        "netcommons/plugin-manager",
    "description": "PluginManager Plugin for NetCommons",
    "type":        "cakephp-plugin",
    "keywords":    ["cakephp", "plugin-manager"],
    "homepage":    "http://www.netcommons.org/",
    "license":     "NetCommons License",
    "authors": [
        {
            "name":     "NetCommons Community",
            "homepage": "https://github.com/NetCommons3/PluginManager/graphs/contributors"
        }
    ],
    "extra": {
        "installer-paths": {
            "app/Plugin/{$name}": ["type:cakephp-plugin"]
        }
    },
    "require": {
        "cakephp/cakephp":              "~2.6.9",
        "cakephp/debug_kit":            "~2.2",
        "cakedc/migrations":            "~2.2",
        "components/jquery":            "~2.1",
        "phpunit/phpunit":              "~3.7.38",
        "sebastian/phpcpd":             "~2.0",
        "twbs/bootstrap":               "~3.1"
    },
    "require-dev": {
        "mustangostang/spyc":           "dev-master",
        "netcommons/net-commons":       "dev-master",
        "satooshi/php-coveralls":       "dev-master"
    },
    "config": {
        "vendor-dir": "vendors"
    }
}

